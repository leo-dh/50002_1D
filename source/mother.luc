module mother (
    input clk,  // clock
    input rst,  // reset
    input difficulty[2],
    input writeenable,
    input writevalue[16],
    output pos[16]
    
  ) {
  .clk (clk){
    .rst (rst){
    dff motherposition[16];
    dff timer[30];
    }
  }
  always {
    
    case (difficulty){
      b01: // Hard
        timer.d = timer.q + 1;
        if (timer.q == d325000000){ // 6.5s delay
          timer.d = 0;
          motherposition.d = motherposition.q + 1;          
        }
      b10: // Simple
        timer.d = timer.q + 1;
        if (timer.q == d175000000){ // 3.5s delay
          timer.d = 0;
          motherposition.d = motherposition.q + 1;
        }
      default:
        timer.d = 0;
    }
    if (writeenable == 1){
      motherposition.d = writevalue;
      timer.d = timer.q;
    }    
    pos = motherposition.q;
  }
}
